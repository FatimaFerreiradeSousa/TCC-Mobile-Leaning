angular.module('atv4').factory('fac', function() {
   var clients = [];

    var obj =  {
      salvar: function(client) {
        clients.push(client);
      },

      getClients: function(){
        return clients
      },

      delete: function(client){
        clients.splice(clients.indexOf(client), 1);
      },

      alterar: function(client){
        var codigo = buscarCliente(client.codigo);
        clients[codigo] = client;
      },

      getClient: function(index){        
        for (var i = 0; i < clients.length; i++) {
          if (clients[i].codigo === parseInt(index)) {
            return clients[i];
          }
        }
        return null;
      }
    }

    return obj;

})
